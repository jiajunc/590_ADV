{
  "data": {"url": "vgsales.csv"},
  "repeat": {
    "row": ["NA_Sales", "Year", "Global_Sales"],
    "column": ["Global_Sales", "Year", "NA_Sales"]
  },
  "spec": {
    "selection": {
      "brush": {"type": "interval", "resolve": "global"}
    },
    "mark": "point",
    "encoding": {
      "x": {"field": {"repeat": "column"}, "type": "quantitative"},
      "y": {"field": {"repeat": "row"}, "type": "quantitative"},
      "color": {
        "condition": {
          "selection": "brush",
          "field": "Platform", "type": "nominal"
        },
        "value": "grey"
      }
    }
  }
}
