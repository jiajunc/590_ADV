{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "description": "A bar chart that sorts the y-values by the x-values.",
  "data": {"url": "vgsalesGlobale.csv"},
  "mark": "bar",
  "width": 360,
  "Height":720,
  "encoding": {
    "y": {
      "field": "Year",
      "type": "ordinal",
      "scale": {"rangeStep": 17},
      "sort": {"encoding": "x"}
    },
    "x": {
      "aggregate": "sum",
      "field": "Global_Sales",
      "type": "quantitative",
      "axis": {"title": "Global Sales"}
    }
  }
}
